<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/projet_dar</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">123456</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping class="model.bo.Utilisateur" />
		<mapping class="model.bo.Comment" />
		<mapping class="model.bo.Annonce" />
		<mapping class="model.bo.Evenement" />
		<mapping class="model.bo.Message" />
		<mapping class="model.bo.ACommentaire" />
		<mapping class="model.bo.Photo" />
		<mapping class="model.bo.Avatar" />
		<mapping class="model.bo.PhotoEvent" />
		<mapping class="model.bo.Notification" />


	</session-factory>
</hibernate-configuration>